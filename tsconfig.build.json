{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2019",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "playwright-tests",
    "test",
  ]
}
