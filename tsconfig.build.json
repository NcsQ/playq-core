{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2019",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "playwright-tests",
    "test",
    "src/exec/featureFileCache.ts",
    "src/exec/featureFilePreProcess.ts",
    "src/exec/preProcessEntry.ts",
    "src/exec/preProcess_old_todelete.ts",
    "src/helper/bundle/vars.bak1.ts"
  ]
}
